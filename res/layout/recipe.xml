<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background_shelf_2"
     >

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="107dp" >

	    <ImageView
	        android:id="@+id/cocktailImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:src="@drawable/ic_launcher" />

	    <TextView
	        android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
	        android:layout_toRightOf="@+id/cocktailImage"
            android:text="cocktail name"
            android:textColor="#FFF"
            android:shadowColor="#222"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:textSize="54px" />

	</RelativeLayout>

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="40px"/>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14"
        android:paddingLeft="30px" 
        android:layout_gravity="bottom" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:paddingBottom="10px"
                android:paddingTop="10px"
                android:shadowColor="#222"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="@string/Sweet"
                android:textColor="#FFF"
                android:textSize="20px" />

            <ProgressBar
                android:id="@+id/sweetnessProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:max="50"
                android:paddingBottom="10px"
                android:paddingTop="10px" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10px"
                android:paddingTop="10px"
                android:shadowColor="#222"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="@string/Sour"
                android:textColor="#FFF"
                android:textSize="20px" />

            <ProgressBar
                android:id="@+id/sournessProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:max="50"
                android:paddingBottom="10px"
                android:paddingTop="10px" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10px"
                android:paddingTop="10px"
                android:shadowColor="#222"
                android:shadowDx="0"
                android:shadowDy="5"
                android:shadowRadius="2"
                android:text="@string/Herbal"
                android:textColor="#FFF"
                android:textSize="20px" />

            <ProgressBar
                android:id="@+id/herbalnessProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:max="50"
                android:paddingBottom="10px"
                android:paddingTop="10px" />
        </TableRow>
    </TableLayout>

        <Button
            android:id="@+id/tweetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Tweet" />

</LinearLayout>