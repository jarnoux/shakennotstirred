<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/background_shelf_2">

    <RelativeLayout
        android:id="@+id/resultHeaderView"
        android:layout_width="match_parent"
        android:layout_height="107dp" >

        <ImageView
            android:id="@+id/cocktailIconView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/cocktailNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/cocktailIconView"
            android:text="cocktail name"
            android:textColor="#FFF"
            android:shadowColor="#222"
            android:shadowDx="0"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:textSize="54px" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#EEE"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/suggestionText"
        android:textSize="16px"
        android:textColor="#000000"
         />

    <ListView
        android:id="@+id/suggestionsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.08"
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:cacheColorHint="#00000000"
        >
    </ListView>

</LinearLayout>