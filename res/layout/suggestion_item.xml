<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/cocktailIcon"
		android:layout_gravity="left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:src="@drawable/champagne_glass"/>

	<TextView
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/cocktailName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@+id/cocktailIcon"
	    android:padding="10dp"
	    android:text="Sample Cocktaillllllllllllllllllllllllll"
	    android:maxLines="2"
	    android:maxWidth="200px"
	    android:textColor="#EEE"
        android:shadowColor="#222"
        android:shadowDx="0"
        android:shadowDy="5"
        android:shadowRadius="2"
	    android:textSize="16sp" />

	<TextView
	    android:id="@+id/cocktailAdditions"
	    android:layout_width="wrap_content"
	    android:maxLines="2"
	    android:maxWidth="180px"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_centerVertical="true"
	    android:layout_marginRight="14dp"
	    android:text="(+ blah blah) (+ blaaaaaaaaaah blah blah) (- blah blaaaaaaaaaaah)"
	    android:textColor="#AAA"
	    android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>